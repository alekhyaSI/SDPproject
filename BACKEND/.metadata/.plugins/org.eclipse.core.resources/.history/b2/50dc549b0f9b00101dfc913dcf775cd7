package com.tutorfinder.service;

import com.tutorfinder.model.StudentProfile;
import com.tutorfinder.repository.StudentProfileRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.Optional;

@Service
public class StudentProfileService {

    @Autowired
    private StudentProfileRepository studentRepository;

    // Get all students
    public List<StudentProfile> getAllStudents() {
        return studentRepository.findAll();
    }

    // Get student by ID
    public Optional<StudentProfile> getStudentById(Long id) {
        return studentRepository.findById(id);
    }

    // Create or update student
    public StudentProfile saveStudent(StudentProfile student) {
        return studentRepository.save(student);
    }

    // Delete student
    public void deleteStudent(Long id) {
        studentRepository.deleteById(id);
    }
}
